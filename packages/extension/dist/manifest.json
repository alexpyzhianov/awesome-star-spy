{
    "manifest_version": 2,
    "name": "Awesome Star Spy",
    "description": "Preview GitHub stars of every repository in an awesome list",
    "version": "1.0.1",

    "browser_action": {
        "default_title": "Awesome Star Spy",
        "default_popup": "popup.html",
        "default_icon": "icon16.png"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": ["identity", "activeTab", "storage"]
}
